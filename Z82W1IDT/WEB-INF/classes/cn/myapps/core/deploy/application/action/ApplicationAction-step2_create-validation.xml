<?xml version="1.0" encoding="UTF-8"?>

  <!DOCTYPE validators PUBLIC 
  		"-//Apache Struts//XWork Validator 1.0.2//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	<field name="content.dbdriver">
		<field-validator type="requiredstring">
			<message>Database driver required</message>
		</field-validator>
	</field>
	
	<field name="content.dburl">
		<field-validator type="requiredstring">
			<message>Database url required</message>
		</field-validator>
	</field>
	
	<field name="content.dbtype">
		<field-validator type="requiredstring">
			<message>Database type required</message>
		</field-validator>
	</field>
	
	<field name="content.dbusername">
		<field-validator type="requiredstring">
			<message>Database user name required</message>
		</field-validator>
	</field>
	
	<field name="content.dbpassword">
		<field-validator type="requiredstring">
			<message>Database password required</message>
		</field-validator>
	</field>
</validators>
